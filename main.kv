<MainScreen>:
    #: import time __main__.time

    name: 'main'
    FloatLayout:
        size_hint: None, None

    DPEAButton:
        id: motor
        size: 100, 100
        x: root.width * 0.05
        y: root.height * 0.05
        background_color: 0,0,0,0
        color: 0.035, 0.152, 0.725, 1
        text: 'off'
        on_press: root.pressMotor()

    DPEAButton:
        id: change_direction
        size: 100, 100
        x: root.width * 0.3
        y: root.height * 0.4
        background_color: 0,0,0,0
        color: 0.46, 0.23, 0.13, 1
        text: 'change direction'
        on_press: root.changeDirection()

    Slider:
        id: slider_label
        min: 0
        max: 20
        step: 1
        orientation: "horizontal"
        on_value: root.slideSpeed()
        sensitivity : 'handle'
        y: root.height * 0.4

    DPEAButton:
        id: display_data
        size: 100, 100
        x: root.width * 0.5
        y: root.height * 0.5
        background_color: 0,0,0,0
        color: 0.035, 0.0, 0.725, 1
        text: 'display'
        on_press: root.display()

    Label:
        id: position
        text: "Motor On"
        size_hint: None, None
        font_size: 30
        center_x: root.width * 0.5
        center_y: root.height * 0.7
        color: 1, 1, 1, 1
        bold: True
        outline_width: self.font_size * 0.1
        outline_color: 0, 0, 0

    DPEAButton:
        id: zero
        size: 100, 100
        x: root.width * 0.8
        y: root.height * 0.8
        background_color: 0,0,0,0
        color: 0.035, 0.152, 0.0, 1
        text: 'zero'
        on_press: root.zero()
